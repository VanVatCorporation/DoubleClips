<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/editSpecificArea"
    android:layout_below="@id/timestampBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#aaaaff"
        android:focusable="true"
        android:focusableInTouchMode="true"/>
    <ImageButton
        android:id="@+id/closeWindowButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/baseline_close_24"/>
    <Button
        android:id="@+id/applyAllButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@id/closeWindowButton"
        android:text="Apply to all"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/transitionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_below="@id/closeWindowButton"
        android:text="Transition"
        android:textSize="18sp" />
    <Spinner
        android:id="@+id/transitionContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@id/transitionText"
        android:layout_below="@id/closeWindowButton"
        android:background="@null"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/durationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_below="@id/transitionText"
        android:text="Duration"
        android:textSize="18sp" />
    <EditText
        android:id="@+id/durationContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@id/durationText"
        android:layout_below="@id/transitionText"
        android:background="@null"
        android:hint="1"
        android:textSize="18sp"/>



    <TextView
        android:id="@+id/transitionModeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_below="@id/durationText"
        android:text="Transition mode"
        android:textSize="18sp" />
    <Spinner
        android:id="@+id/transitionModeContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@id/transitionModeText"
        android:layout_below="@id/durationText"
        android:background="@null"
        android:textSize="18sp"/>

</RelativeLayout>